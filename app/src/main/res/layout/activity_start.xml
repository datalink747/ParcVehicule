<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/md_drawer_background"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.project.parcvehicule.Start">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/logo_start"
        android:layout_gravity="center_horizontal|center_vertical"
        android:src="@drawable/logo1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_marginBottom="30dp"
        android:indeterminate="true"
        android:layout_below="@+id/logo_start"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical|center_horizontal|bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gestion du parc vÃ©hicule de STEG"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView2"

        android:layout_gravity="center_vertical|center_horizontal|top"
        android:layout_marginTop="50dp" />

</android.support.design.widget.CoordinatorLayout>
